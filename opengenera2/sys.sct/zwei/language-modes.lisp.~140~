   :PRINTER ((SYNTAX STREAM)
	     (PRINC (FIRST SYNTAX) STREAM))
   :DESCRIPTION "a Lisp syntax name"
   :PARSER ((STREAM)
	    (DW::COMPLETE-FROM-SEQUENCE *LISP-SYNTAX-ALIST* STREAM
					:TYPE 'LISP-SYNTAX
					:NAME-KEY #'FIRST)))

