;;; (2 0 (NIL 0) (NIL :ITALIC NIL) "CPTFONTI")Mode0 = 1:read0 or 1:write
(3 0 (NIL 0) (NIL NIL :SMALLER) "EINY7");;; strip-lock = t or nil; whether to rebind the variable to the unlocked resource.
;;;   :write implies :strip-lock t.
;;; unprotected is a variable to bind to the unlocked resource, instead of the table
;;;   argument.  :unprotected implies :strip-lock t.
0;;; 2unprotected0 and 2strip-lock0 are obsolete noops as of 374.  --RWK

(defmacro with-good-lock ((table mode &key strip-lock (unprotected (gensym) unprotected-p))
			  &body body)
  (declare (ignore mode))
  (when unprotected-p
    (setq strip-lock t))
  (when (or strip-lock unprotected-p)
    (warn "Obsolete :STRIP-LOCK or :UNPROTECTED arguments to WITH-GOOD-LOCK"))
  `(let ((,unprotected ,table))
     (sys:with-table-locked (,unprotected)
       ,@body)))

(defun make-good-table (&rest make-hash-table-args)
 (si:with-rem-keywords (make-hash-table-args make-hash-table-args '(:name :readers-table-size))
   (apply #'make-hash-table make-hash-table-args)))
