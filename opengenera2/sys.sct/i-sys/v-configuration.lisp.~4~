(defflavor VLM-main-board
	(name)
	(ivory-chip-mixin basic-board)
  (:conc-name "BOARD-")
  :initable-instance-variables
  :readable-instance-variables)

(defmethod (board-fasd-list VLM-main-board) ()
  `(:name ,name))

(defmethod (make-instance VLM-main-board) (&key &allow-other-keys)
  (when (eq host net:*local-host*)
    (setf name "Virtual Lisp Machine")))

(defmethod (:describe VLM-main-board) ()
  (format t "~&~A" name))

(defmethod (:describe VLM-main-board :after) ()
  (si:machine-model)
  (format t " main board s/n ~d" (cli::emb-board-serial-number)))

(compile-flavor-methods VLM-main-board)

(defun find-VLM-boards ()
  (list
    (make-instance 'VLM-main-board :chip-revision (si:ivory-revision-name)
				   :fpa-p nil)))
