(defmethod (make-instance patch-section) (&key ((:major-mode major-mode-keyword))
					      &allow-other-keys)
  (setq major-mode (zwei:major-mode-from-keyword major-mode-keyword)))

(defmethod (private-p patch-section) () nil)
