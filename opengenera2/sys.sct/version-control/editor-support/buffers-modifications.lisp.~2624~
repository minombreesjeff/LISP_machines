(defmethod (vcfb-lock-new-branch vc-file-buffer) (base-version)
  "Returns nil if the branch is not unique."
  (let ((lock-result
	  (condition-case ()
	       (vcfb-lock-file-branch-modification self base-version :new-p t)
	     (vci:duplicate-file-branch nil))))
    lock-result))
